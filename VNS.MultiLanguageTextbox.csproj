<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- NuGet Package Metadata -->
		<PackageId>VNS.MultiLanguageTextbox</PackageId>
		<Version>1.0.2</Version>
		<Authors>Martin H. Schl√§ger</Authors>
		<Company>Vital New Software ApS</Company>
		<Product>VNS.MultiLanguageTextbox</Product>
		<Description>An Umbraco 14+ property editor plugin for handling multi-language text content. Supports all languages configured in Umbraco, with options for text input or textarea, and required language validation.</Description>
		<PackageProjectUrl>https://github.com/schlagerdk/VNS.MultiLanguageTextbox</PackageProjectUrl>
		<RepositoryUrl>https://github.com/schlagerdk/VNS.MultiLanguageTextbox</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>VNS;Vital;New;Software;ApS;Umbraco;Multi-Language;Property Editor;i18n;Localization</PackageTags>
		<PackageLicenseFile>LICENSE.md</PackageLicenseFile>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageIcon>icon.png</PackageIcon>
		<Copyright>2025</Copyright>

		<!-- Build settings -->
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IncludeBuildOutput>false</IncludeBuildOutput>
		<ContentTargetFolders>content</ContentTargetFolders>
		<EnableDefaultContentItems>false</EnableDefaultContentItems>
	</PropertyGroup>

	<!-- Include README in package -->
	<ItemGroup>
		<None Include="docs\LICENSE.md" Pack="true" PackagePath="\" />
		<None Include="docs\icon.png" Pack="true" PackagePath="\" />
		<None Include="docs\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<!-- Include dist files in package -->
	<ItemGroup>
		<None Include="dist\VNS.MultiLanguageTextbox\**\*.*">
			<Pack>true</Pack>
			<PackagePath>contentFiles\any\any\wwwroot\App_Plugins\VNS.MultiLanguageTextbox\%(RecursiveDir)%(Filename)%(Extension)</PackagePath>
			<PackageCopyToOutput>true</PackageCopyToOutput>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<!-- Build targets to copy files to wwwroot -->
	<ItemGroup>
		<None Include="build\VNS.MultiLanguageTextbox.targets" Pack="true" PackagePath="build\VNS.MultiLanguageTextbox.targets" />
		<None Include="build\VNS.MultiLanguageTextbox.targets" Pack="true" PackagePath="buildTransitive\VNS.MultiLanguageTextbox.targets" />
	</ItemGroup>

</Project>
